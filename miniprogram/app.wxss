/**app.wxss**/
@import './mp-cu/colorUI/scss/ui';

page {
  --radius:12rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.ui-BG-card {
  margin: 24rpx;
  padding: 24rpx;
  border-radius: var(--radius);
  box-shadow:rgba(12, 12, 12, 0.03) 0px 2px 15px -5px;
}

.sticky-list-item {
  overflow: hidden;
  display: block;
  height: 60rpx!important;
  line-height: 60rpx ;
  max-height:60rpx ;
  padding: 4rpx 0; 
}

.dot {
  float: left;
  width: 8rpx;
  height: 8rpx;
  font-size: 0;
  margin: 22rpx 12rpx 10rpx 16rpx;
} 
.sk-three-bounce {
  margin: 20rpx auto;
  width: 200rpx;
  text-align: center;
}
.sk-three-bounce .sk-child {
  width: 30rpx;
  height: 30rpx;
 
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: sk-three-bounce 1.4s ease-in-out 0s infinite both;
  animation: sk-three-bounce 1.4s ease-in-out 0s infinite both;
}

.sk-three-bounce .sk-bounce1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.sk-three-bounce .sk-bounce2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}
@-webkit-keyframes sk-three-bounce {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  40% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@keyframes sk-three-bounce {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  40% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

.post-item {
  display: flex; 

  overflow: hidden;
}
.post-img {
  width: 202.5rpx;
  height: 135rpx;
  border-radius: 12rpx;
}
.post-desc {
  flex: 1;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.post-title {
  height: 80rpx;
  margin-bottom: 20rpx;
}
.post-title>text {
 
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.post-data {
  display: flex;
  align-items: center;
}
.post-data>image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.post-data>text {
 
  margin-right: 22rpx;
 
}
.loadingmore {
  margin-top: 24rpx;
  text-align: center;
  margin-bottom: 24rpx;
}
.copyright {
  font-size: 26rpx;
  line-height: 1.6;
  font-weight: 400;
  text-align: center;
  color: #c4c4c4;
  margin-top: 48rpx;
  padding-bottom: 80rpx;
}
.showerror {
  text-align: center;
  font-weight: normal;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #757575;
  margin-top: 100rpx;
}