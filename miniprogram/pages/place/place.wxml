            <view slot="tag" class="ui-tag bg-mask-20 radius-lr">
                <view>
                    <text>{{item.like}}</text>
                </view>
            </view>
        </ui-card>
        <ui-card ui="shadow m-3 radius" imgHeight="180rpx" img="/images/website.png" title="title" desc="desc" isTag>
