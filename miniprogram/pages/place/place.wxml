    <view class="m-3 text-left">
        <ui-tab tab="{{[{name:'选项卡1',icon:'cicon-whatshot  text-yellow'},{name:'选项卡2',icon:'cicon-upstage-o text-yellow'},{name:'选项卡3',icon:'cicon-quill-o  text-yellow'},{name:'选项卡1',icon:'cicon-whatshot  text-yellow'}]}}" tpl="btn" mark="bg-orange" ui="radius p-1 sm" curColor="text-white" inline />
    </view>
